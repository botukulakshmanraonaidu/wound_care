# =============================================================
# Django Backend — Environment Variables
# Copy this file to .env and fill in all values.
# NEVER commit .env to Git — it is already in .gitignore.
# =============================================================

# ── Core ──────────────────────────────────────────────────────
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(50))"
SECRET_KEY=replace-with-a-long-random-string

# Set to False in production, True only for local dev
DEBUG=False

# Your Render service URL (no trailing slash)
ALLOWED_HOSTS=aiwound-django-api.onrender.com

# ── MySQL Database ─────────────────────────────────────────────
DB_ENGINE=django.db.backends.mysql
DB_NAME=wound_analysis
DB_USER=your_mysql_username
DB_PASSWORD=your_mysql_password
DB_HOST=aws.connect.psdb.cloud
DB_PORT=3306

# ── CORS (your Netlify URL, no trailing slash, no spaces) ──────
CORS_ALLOWED_ORIGINS=https://your-app.netlify.app

# ── Email (Gmail App Password — NOT your regular Gmail password) ─
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=yourapp@gmail.com
EMAIL_HOST_PASSWORD=xxxx xxxx xxxx xxxx

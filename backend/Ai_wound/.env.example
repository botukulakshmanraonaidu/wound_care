# =============================================================
# Django Backend — Production Environment Variables (Render)
# Copy this file to .env and fill in all values.
# =============================================================

# ── Core ──────────────────────────────────────────────────────
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(50))"
SECRET_KEY=your-production-secret-key-here

# Always False in production
DEBUG=False

# Your Render service URL (e.g., ai-wound.onrender.com)
ALLOWED_HOSTS=your-app.onrender.com,localhost,127.0.0.1

# ── Database (Supabase / Postgres) ────────────────────────────
# Render automatically handles DATABASE_URL if you link a database.
# For Supabase, use: postgres://postgres:[password]@[host]:5432/postgres
DATABASE_URL=your-database-connection-string

# ── Cloudinary (Image Storage) ────────────────────────────────
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ── CORS (Frontend URLs) ──────────────────────────────────────
# Your Netlify/Vercel URL, no trailing slash. Separate multiple by commas.
CORS_ALLOWED_ORIGINS=https://your-frontend.netlify.app,http://localhost:5173

# ── Email (SMTP / Gmail) ──────────────────────────────────────
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
